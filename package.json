{
  "name": "whispers",
  "version": "0.1.0",
  "description": "Chinese Whispers (aka Telephone) using Google speech API's",
  "repository": "https://github.com/numical/whispers/",
  "main": "express.js",
  "scripts": {
    "lint": "prettier --write src/**/*.js",
    "test": "tap src/**/*.test.js --no-coverage",
    "loadtest:cloud-functions": "artillery run ./test/cloud-functions.yml",
    "loadtest:cloud-run": "artillery run ./test/cloud-run.yml",
    "listVoices": "export GOOGLE_APPLICATION_CREDENTIALS=./auth/whispers-key.json && npx @google-cloud/functions-framework --target=listVoices",
    "playGame": "export GOOGLE_APPLICATION_CREDENTIALS=./auth/whispers-key.json && npx @google-cloud/functions-framework --target=playGame",
    "express": "node express",
    "containerise:local": "docker build -t numical-telephone .",
    "containerise:remote": "gcloud builds submit --tag gcr.io/numical-telephone/whispers && gcloud run deploy whispers --image gcr.io/numical-telephone/whispers --platform managed --allow-unauthenticated --region=europe-west1 --memory=512Mi",
    "container": "docker run -p 8080:8080 --volume=/home/mike/sandbox/whispers/auth:/auth:ro --env GOOGLE_APPLICATION_CREDENTIALS=./auth/whispers-key.json numical-telephone",
    "deploy": "gcloud functions deploy playGame --runtime nodejs12 --trigger-http --allow-unauthenticated  --region=europe-west2",
    "deploy:listVoices": "gcloud functions deploy listVoices --runtime nodejs12 --trigger-http --allow-unauthenticated  --region=europe-west2",
    "draw": "npx mmdc -i ./images/functional-spec.mmd -o ./images/functional-spec.png"
  },
  "keywords": [
    "gcp",
    "cloud function"
  ],
  "author": "mike.evans@numical.com",
  "license": "NLPL",
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "artillery": "^1.6.1",
    "fast-crc32c": "^2.0.0",
    "mermaid.cli": "^0.5.1",
    "prettier": "^2.2.1",
    "tap": "^14.11.0",
    "testdouble": "^3.16.1"
  },
  "dependencies": {
    "@google-cloud/speech": "^4.1.5",
    "@google-cloud/storage": "^5.7.0",
    "@google-cloud/text-to-speech": "^3.1.3",
    "express": "^4.17.1",
    "uuid": "^8.3.2"
  }
}
